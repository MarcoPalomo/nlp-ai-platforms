{
  "dashboard": {
    "title": "NLP Platform Dashboard",
    "panels": [
      {
        "title": "Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(requests_total[5m])",
            "legendFormat": "RPS"
          }
        ]
      },
      {
        "title": "Response Time",
        "type": "graph", 
        "targets": [
          {
            "expr": "avg(response_time_seconds)",
            "legendFormat": "Avg Response Time"
          }
        ]
      }
    ]
  }
}
